cd "${main_single_repo}"

mkdir -p api_tests.d
echo true > api_tests.d/test1
g automatic 'No comment.'
rm api_tests.d/test1
output="$(g automatic 'No comment.')"
version="$(echo "${output}" | tail -n 1)"
if ! test "${version}" == '1.0.0'; then
  return 1
fi

touch thing1
output="$(g major 'No comment.')"
version="$(echo "${output}" | tail -n 1)"
if ! test "${version}" == '2.0.0'; then
  return 2
fi
