cd "${main_single_repo}"

touch thing1
g automatic 'No comment.' > "${output_dir}/1.1.txt" 2>&1
version="$(tail -n 1 < "${output_dir}/1.1.txt")"
if ! test '0.0.1' == "${version}"; then
  return 1
fi

touch thing2
g automatic 'No comment.' > "${output_dir}/1.2.txt" 2>&1
version="$(tail -n 1 < "${output_dir}/1.2.txt")"
if ! test "${version}" == '0.0.2'; then
  return 2
fi

touch thing3
g patch 'No comment.' > "${output_dir}/1.3.txt" 2>&1
version="$(tail -n 1 < "${output_dir}/1.3.txt")"
if ! test "${version}" == '0.0.3'; then
  return 3
fi
