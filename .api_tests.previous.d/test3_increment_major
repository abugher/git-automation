cd "${main_single_repo}"

mkdir -p api_tests.d
echo true > api_tests.d/test1
g automatic 'No comment.' > "${output_dir}/3.1.1.txt" 2>&1
rm api_tests.d/test1
g automatic 'No comment.' > "${output_dir}/3.1.2.txt" 2>&1
version="$(tail -n 1 < "${output_dir}/3.1.2.txt")"
if ! test "${version}" == '1.0.0'; then
  return 1
fi

touch thing1
g major 'No comment.' > "${output_dir}/3.2.txt" 2>&1
version="$(tail -n 1 < "${output_dir}/3.2.txt")"
if ! test "${version}" == '2.0.0'; then
  return 2
fi
